<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    app:cardCornerRadius="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_a_new_food_item"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/primary"
                android:paddingVertical="4dp"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:hint="@string/food_name"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtFoodBrandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/brand_name"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <EditText
                        android:id="@+id/edtFoodCalories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/calories_kcal"
                        android:inputType="number"
                        android:textSize="12sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp">
                    <EditText
                        android:id="@+id/edtFoodProtein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/protein_g"
                        android:inputType="number"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <EditText
                        android:id="@+id/edtFoodFats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fats_g"
                        android:inputType="number"
                        android:textSize="12sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp">
                    <EditText
                        android:id="@+id/edtFoodSaturates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/saturates_g"
                        android:inputType="number"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <EditText
                        android:id="@+id/edtFoodCarbohydrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/carbohydrate_g"
                        android:inputType="number"
                        android:textSize="12sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp">
                    <EditText
                        android:id="@+id/edtFoodSugars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sugar_g"
                        android:inputType="number"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <EditText
                        android:id="@+id/edtFoodFibre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fibre_g"
                        android:inputType="number"
                        android:textSize="12sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="8dp">
                    <EditText
                        android:id="@+id/edtFoodSalt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/salt_g"
                        android:inputType="number"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/edtFoodMeasurementValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/serving_size"
                        android:inputType="number"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/drpFoodMeasurementUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:hint="@string/measurement"
                        android:textSize="10sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:id="@+id/btnFoodSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="@string/save"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/edtNumServings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/number_of_servings"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnFoodSaveAdd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/save_add"
                    android:layout_marginHorizontal="8dp"/>

            </LinearLayout>

        </LinearLayout>









    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>